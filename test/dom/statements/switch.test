UTest({
	
	'+switch' () {
		
		var controller = {},
			model = {
				val: 0
			},
			
			template = `
				div >
					+switch (val) {
						case (1) >
							span > 'a';
						case (2) >
							span > 'b';
						default >
							span > 'd'
					}
			`
			;
		
		
		$dom = $render(template, model, null, null, controller);
		
		var Switch = Compo.find(controller, '+switch');
		
		notEq_(Switch, null);
		$dom.eq_('text', 'd');
		
		model.val = 1;
		$dom.eq_('text', 'da');
		$visible('span:nth-child(1)', false);
		
		model.val = 2;
		$dom.eq_('text', 'dab');
		$visible('span:nth-child(1)', false);
		$visible('span:nth-child(2)', false);
		
		model.val = 0;
		$dom.eq_('text', 'dab');
		$visible('span:nth-child(1)', true);
		$visible('span:nth-child(2)', false);
		$visible('span:nth-child(3)', false);
	}
})